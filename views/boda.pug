doctype html
head
  link(rel='stylesheet' href='./public/css/bootstrap.css')
  link(rel='stylesheet' href='../css/boda.css')
  link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css')
  title Booking Form
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
h1(style='color: darkgreen') DOCKVILLE DAY AND NIGHT PARKING
nav.navbar.navbar-expand-lg.bg-body-tertiary
  .container-fluid
    a.navbar-brand(href='#') Navbar
    button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
      span.navbar-toggler-icon
    #navbarSupportedContent.collapse.navbar-collapse
      ul.navbar-nav.me-auto.mb-2.mb-lg-0
        li.nav-item
          a.nav-link.active(aria-current='page' href='index.html') Home
        li.nav-item.dropdown
          a.nav-link.dropdown-toggle(href='#' role='button' data-bs-toggle='dropdown' aria-expanded='false')
            | Sections
          ul.dropdown-menu
            li
              a.dropdown-item(href='parking.html') Parking
            li
              a.dropdown-item(href='#') Tire clinic
            li
              hr.dropdown-divider
            li
              a.dropdown-item(href='#') Battery
      form.d-flex(role='search')
        input.form-control.me-2(type='search' placeholder='Search' aria-label='Search')
        button.btn.btn-outline-success(type='submit')
          | Search
h2 Customer&apos;s details
.booking
  h3 Bodaboda
  form#formId(name='boda' action='#' onsubmit='return Validate()' method='POST')
    .row
      .col
        input#firstname.form-control(type='text' placeholder='First name' name='firstname')
        span#firstnameError
      .col
        input#lastname.form-control(type='text' placeholder='Last name' aria-label='Last name' name='lastname')
        span#lastnameError
    .model
      label#inputGroup-sizing-sm.model(for='model') Car Model
      span#modelError
      input#model.form-control(type='text' name='model')
    .car-number
      span#numberPlateError
      label#ingroup-sizing.p-(for='numberplate') Car Number Plate
      input#numberplate.form-control(type='text' name='numberplate')
    .car-color
      span#colorError
      label#ingroup-sizing.p- Car Color
      input#color.form-control(type='text' name='color')
    .date
      span#dateError
      label#ingroupsizing.date Date
      input#date.form-control(type='date' name='date')
    .time
      span#timeError
      label#ingroup.color Time of arrival
      input#time.form-control(type='time' name='time')
    .slot
      span#slotnumberError
      label#slot-sizing.date Slot Number
      input#slotnumber.form-control(type='number' name='slotnumber')
    .slot
      span#ninError
      label#slot-sizing.nin NIN
      input#nin.form-control(type='nin' name='nin')
    button(type='submit' onsubmit='services.html') Sign Up
  script(src='../js/boda.js')
  script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js')
